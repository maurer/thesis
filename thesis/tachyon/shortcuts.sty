
%% logic basics
\newcommand{\ttrue}{\mathsf{true}}
\newcommand{\tfalse}{\mathsf{false}}
\newcommand{\impl}{\mathrel{\rightarrow}}

%% gcl statements -- Always use in math mode.  If you change \gclfont,
%% you must manually change the gcl commands to reflect that font as
%% well.  
\newcommand{\gclfont}[1]{\mathsf{#1}}
\newcommand{\choicebox}{\mathrel{\boxempty}}
\newcommand{\assign}[2]{#1 \mathrel{:=} #2}
\newcommand{\passign}[2]{#1 \mathrel{=} #2}
\newcommand{\assert}[1]{\mathsf{assert}\, #1}
\newcommand{\assume}[1]{\mathsf{assume}\, #1}
\newcommand{\choice}[2]{#1 \choicebox #2}
\newcommand{\seq}[2]{#1 \mathrel{@} #2}
% semi-colon sequence
\newcommand{\sseq}[2]{#1 \mathrel{;} #2}

\newcommand{\ite}[3]{\mathsf{ite}(#1, #2, #3)}
\newcommand{\slist}[1]{#1\,\mathsf{list}}

%% weakest preconditions
\renewcommand{\wp}[2]{\mathsf{wp}\,#1\, #2}
\newcommand{\dwp}[2]{\mathsf{dwp}\,#1\, #2}

\newcommand{\wlp}[2]{\mathsf{wlp}\,#1\,#2}
\newcommand{\fserule}[3]{\mathsf{fse}(#1,#2) : #3}


\newcommand{\fse}[3]{\mathsf{fse}\,#1\, #2 \,#3 }
\newcommand{\twofse}[2]{\mathsf{fse}\, #1\, #2}
\newcommand{\fsename}{\mathsf{fse}}
\newcommand{\dwpname}{\mathsf{dwp}}
\newcommand{\efsename}{\mathsf{efse}}
\newcommand{\pfsename}{\mathsf{pfse}}
\newcommand{\efse}[2]{\mathsf{efse}\, #1\, #2}


%% misc
% substitution
\newcommand{\subst}[3]{#1[#2/#3]}
% application of a substitution 
\newcommand{\substapp}[2]{#1\, #2}
\newcommand{\fsel}{FSEL\xspace}
\newcommand{\pfsel}{pFSEL\xspace}
\newcommand{\gcl}{GCL\xspace}
\newcommand{\pgcl}{pGCL\xspace}

%% make bnf pretty using stmtkind
\newcommand{\emphkind}[1]{\emph{{#1}}}

%% syntatic classes
\newcommand{\pred}[1]{P_{#1}}
\newcommand{\stmt}[1]{S_{#1}}
\newcommand{\variable}[1]{x_{#1}}

\newcommand{\hoare}[3]{\{#1\}#2\{#3\}}

\newtheorem{example}{Example}%[section]
\newtheorem{thm}{Theorem}%[section]

\newcommand{\fwdstate}[2]{\langle#1,#2\rangle}



\newtheorem{lem}[thm]{Lemma}
